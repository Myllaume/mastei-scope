---
pagination:
  data: records_by_type
  size: 1
  alias: type
permalink: "/types/{{ type.key }}/"
layout: base.liquid
eleventyComputed:
  title: "{{ type.key }}"
---

<article>
  <header>
    <h1>{{ type.key }}</h1>
  </header>

  <ul>
    {% for record in type.records %}
      <li><a href="/records/{{ record.id }}">{{ record.title }}</a></li>
    {% endfor %}
  </ul>
</article>
